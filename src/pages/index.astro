---
import { Head, Footer, Navigation } from "@/components/organisms";
import { SITE_TITLE, SITE_DESCRIPTION } from "@/consts";
import { Image } from "astro:assets";
import SpeedInsights from "@vercel/speed-insights/astro";
import Analytics from "@vercel/analytics/astro";
import getBlueskyAvatar from "@/utils/getBlueskyAvatar";

const blueskyAvatar = await getBlueskyAvatar();
---

<!doctype html>
<html lang="en">
	<head>
		<Head title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			body > main > img {
				width: clamp(200px, 100vw, 300px);
			}
		</style>
	</head>
	<body data-theme="dark">
		<Navigation />
		<main>
			<Image
				src={blueskyAvatar}
				alt="Profile of Clay, a cow fursona."
				width={300}
				height={300}
				quality={"low"}
				loading={"lazy"}
			/>
			<h1>üåæ Hello, I'm Clay üêÑ</h1>
			<p>
				I'm a cow furry who's also a software engineer, specifically in
				frontend development. Some of my main interests include creating
				applications, shaders, algorithmic art and discussing current
				social issues. This website is a place for me to aggregate and
				fully express my viewpoints through blogging.
			</p>
		</main>
		<Footer />
		<SpeedInsights />
		<Analytics />
	</body>
</html>
